<UserControl x:Class="LiveFootball.Views.FixturesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LiveFootball.Views" xmlns:viewModels="clr-namespace:LiveFootball.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:FixturesViewModel />
    </UserControl.DataContext>

    <Grid>
        <ItemsControl ItemsSource="{Binding LeagueExpanderCollection}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:LeagueExpanderView DataContext="{Binding }" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>